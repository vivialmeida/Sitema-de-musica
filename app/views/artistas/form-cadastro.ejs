<%- include ../partials/cabecalho.ejs %>
<%- include ../partials/navegacao.ejs %>

<h2 class="text-center">Artistas</h2>

<body class="container">

    <div class="container">

        <% if(errosValidacao) { %>
           <div class="alert alert-danger"> 
            <ul>
                <% for(var i=0; i < errosValidacao.length; i++) {%>
                    <li>
                        <%= errosValidacao[i].msg %>
                    </li>
                    <%}%>
            </ul>
        </div> 
       <%}%>
 

    <form action="/artistas" method="post">
        <div class="form-row">

            <% if(artista.id ) { %>
                <input type="hidden" id="id" name="id" value="<%=artista.id%>">
            <% } %>
             
            <div class="form-group col-md-8">
                <label for="nome">Nome</label>
                <input class="form-control" type="text" id="nome" name="nome" value="<%=artista.nome%>" placeholder="Informe o nome do artista">
            </div>

            <div class="form-group col-md-4">
               <label for="">Nacionalidade</label>
               <input class="form-control" type="text" id="nacionalidade" name="nacionalidade" value="<%=artista.nacionalidade%>" placeholder="Informe a nacionalidade do artista">
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </form>        
