<%- include ../partials/cabecalho.ejs %>
<%- include ../partials/navegacao.ejs %>

<h2 class="text-center">Musicas</h2>

<body class="container">

    <table class="table">
        <thead class="table-primary">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Duracao</th>
                <th scope="col">Artista</th>
                <th class="scope center">Ações</th>
            </tr>
        </thead>
        <tbody class="table-dark">
            <% for(var i=0; i < lista.length; i++) { %>
            <tr>
                <th scope="row">
                    <%=i+1%>
                </th>
                <td>
                    <%= lista[i].nome %>
                </td>
                <td>
                    <%= lista[i].duracao %>
                </td>
                <td>
                    <%= lista[i].artista %>
                </td>
                <td>
                    <a href="/musicas/edita/<%= lista[i].id %>" class="btn btn-outline-primary btn-sm">Editar</a>

                    <form method="post" action="/musicas/remove/<%= lista[i].id %>" class="float-left">
                        <button type="submit" class="btn btn-outline-danger btn-sm"
                            onClick="return confirm('Confirmar a exclusão da musica <%= lista[i].nome %>?')">Excluir</button>

                    </form>

                </td>
            </tr>
            <% } %>
        </tbody>

    </table>

<%- include ../partials/rodape.ejs %>